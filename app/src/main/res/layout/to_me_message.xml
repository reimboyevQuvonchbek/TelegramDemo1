<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="100dp"
    android:paddingStart="@dimen/horizantal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/to_me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:13"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#6B000000"
            android:textSize="@dimen/time_text_size"
            android:layout_marginEnd="@dimen/horizantal_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_text" />

        <TextView
            android:id="@+id/message_text"
            android:layout_marginTop="@dimen/vertical_margin"
            android:paddingStart="@dimen/horizantal_margin"
            android:paddingEnd="@dimen/horizantal_margin"
            android:text="ddssdfdsfdsdsdddddddddd1234567890"
            app:layout_constraintBottom_toTopOf="@id/message_time"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/style_message_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>