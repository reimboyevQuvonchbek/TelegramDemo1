<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginEnd="@dimen/horizantal_margin"
        android:layout_marginStart="100dp"
        android:id="@+id/block_user_message"
        android:layout_marginVertical="5dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/from_me"
                android:id="@+id/message_photo1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
               />
            <RelativeLayout
                app:layout_constraintBottom_toBottomOf="@id/message_photo1"
                app:layout_constraintEnd_toEndOf="@id/message_photo1"
                android:layout_marginEnd="@dimen/normal_padding_size"
                android:layout_marginBottom="@dimen/normal_padding_size"
                android:layout_width="wrap_content"
                android:paddingHorizontal="@dimen/normal_padding_size"
                android:background="@drawable/radius_1"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/is_read1"
                    android:src="@drawable/ic_check_white1"
                    android:layout_width="@dimen/icon_with"
                    android:layout_height="@dimen/icon_height"
                    android:layout_toEndOf="@id/message_time1"
                    />

                <TextView
                    android:id="@+id/message_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:13"
                    android:layout_marginEnd="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/time_text_size"
                  />

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/block_received_message"
        android:layout_marginVertical="5dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/horizantal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/from_me"
                android:id="@+id/message_photo2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <RelativeLayout
                app:layout_constraintBottom_toBottomOf="@id/message_photo2"
                app:layout_constraintEnd_toEndOf="@id/message_photo2"
                android:layout_marginEnd="@dimen/normal_padding_size"
                android:layout_marginBottom="@dimen/normal_padding_size"
                android:layout_width="wrap_content"
                android:paddingHorizontal="@dimen/normal_padding_size"
                android:background="@drawable/radius_1"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/message_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:13"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/time_text_size"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>